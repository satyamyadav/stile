  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Design System Coverage",
      "datasource": {
        "type": "grafana-clickhouse-datasource",
        "uid": "stile-clickhouse"
      },
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "format": 1,
          "rawSql": "SELECT if(sum(occurrences) = 0, 0, round(sumIf(occurrences, category = 'design-system') / sum(occurrences) * 100, 2)) AS coverage FROM ds_component_usage WHERE project = '${project}' AND $__timeFilter(collected_at)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "color": { "mode": "palette-classic" },
          "mappings": []
        },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": { "fields": "", "values": false, "calcs": ["lastNotNull"] }
      }
    },
    {

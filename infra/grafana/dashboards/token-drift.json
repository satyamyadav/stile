      "title": "Category Mix Over Time",
      "datasource": {
        "type": "grafana-clickhouse-datasource",
        "uid": "stile-clickhouse"
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "format": 0,
          "rawSql": "SELECT toDate(collected_at) AS time, category, sum(occurrences) AS value FROM ds_component_usage WHERE project = '${project}' AND $__timeFilter(collected_at) GROUP BY time, category ORDER BY time"
        }
